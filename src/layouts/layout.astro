---
import "@/styles/global.css";
import { ViewTransitions } from "astro:transitions";
import Navbar from "@/components/navbar";
import Footer from "@/components/footer";

const {
  title = "Harian Muslim",
  description = "Platform harian untuk Al-Qur'an, jadwal sholat, dan doa.",
} = Astro.props;

const canonicalUrl = Astro.url.href;
const metaTitle = title;
const metaDescription = description;
const metaImage = new URL("/og-images.webp", Astro.url).href;
const themeLight = "#f8f9fa";
const themeDark = "#0f1a15";
---

<!doctype html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{metaTitle}</title>
    {metaDescription ? <meta name="description" content={metaDescription} /> : null}
    <meta name="robots" content="index, follow" />
    <meta name="color-scheme" content="light dark" />
    <meta name="theme-color" media="(prefers-color-scheme: light)" content={themeLight} />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content={themeDark} />
    <meta name="application-name" content="Harian Muslim" />
    <meta name="apple-mobile-web-app-title" content="Harian Muslim" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="format-detection" content="telephone=no" />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="192x192" href="/android-chrome-192x192.png" />
    <link rel="icon" type="image/png" sizes="512x512" href="/android-chrome-512x512.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:title" content={metaTitle} />
    {metaDescription ? (
      <meta property="og:description" content={metaDescription} />
    ) : null}
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={metaImage} />
    <meta property="og:site_name" content="Harian Muslim" />
    <meta property="og:locale" content="id_ID" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={metaTitle} />
    {metaDescription ? (
      <meta name="twitter:description" content={metaDescription} />
    ) : null}
    <meta name="twitter:image" content={metaImage} />
    <ViewTransitions />
    <script src="/theme-init.js" is:inline></script>
    <script src="/last-read.js" defer is:inline></script>
  </head>
  <body class="bg-background text-foreground">
    <div class="relative min-h-screen">
      <Navbar client:load transition:persist pathname={Astro.url.pathname} />

      <main class="relative">
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>
